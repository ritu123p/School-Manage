@model List<schoool_Management.Models.CourseEnroll>

<h2 class="mb-4">My Enrolled Courses</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Course Name</th>
                <th>Description</th>
                <th>Teacher Name</th>
                <th>Enroll Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var enroll in Model)
            {
                <tr>
                    <td>@enroll.Course.Name</td>
                    <td>@enroll.Course.Description</td>
                    <td>@enroll.Course.Teacher.FullName</td>
                    <td>@enroll.EnrollDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        You have not enrolled in any courses yet.
    </div>
}
