@model schoool_Management.Models.TeacherModel

@{
    ViewData["Title"] = "Edit Teacher";
}

<style>
    .card-form {
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        padding: 30px;
        max-width: 600px;
        margin: auto;
    }

    .form-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #3f51b5;
        margin-bottom: 25px;
        border-bottom: 2px solid #3f51b5;
        padding-bottom: 10px;
    }

    .form-group label {
        font-weight: 500;
    }

    .btn-save {
        background-color: #1976d2;
        color: white;
        font-weight: 500;
        padding: 8px 20px;
        border-radius: 6px;
    }

        .btn-save:hover {
            background-color: #0d47a1;
        }

    .back-link {
        margin-top: 15px;
        display: inline-block;
        color: #1976d2;
        font-weight: 500;
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

<div class="card-form mt-5">
    <div class="form-title">Edit Teacher Details</div>

    <form asp-action="TeacherEdit" method="post">
        <input asp-for="Id" type="hidden" />
        <input asp-for="IdentityUserId" type="hidden" />

        <!-- FullName -->
        <div class="form-group mb-3">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <!-- Email -->
        <div class="form-group mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Subject -->
        <div class="form-group mb-3">
            <label asp-for="Subject"></label>
            <input asp-for="Subject" class="form-control" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>

        <!-- Gender -->
        <div class="form-group mb-3">
            <label asp-for="Gender"></label>
            <select asp-for="Gender" class="form-control">
                <option value="">-- Select Gender --</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <!-- Experience -->
        <div class="form-group mb-3">
            <label asp-for="Experience"></label>
            <input asp-for="Experience" class="form-control" />
            <span asp-validation-for="Experience" class="text-danger"></span>
        </div>

        <div class="form-group mt-4">
            <input type="submit" value="Save Changes" class="btn btn-save" />
        </div>
    </form>


    <a asp-action="Index" class="back-link">← Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
